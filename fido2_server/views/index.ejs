<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Credentials and Users</title>
    <link rel="stylesheet" href="/styles.css"> 
</head>
<body>

    <div class = "content">
        <h1>User</h1>
        <table>
            <tr>
                <th>Username</th>
                <th>Info</th>
                <th>Actions</th>
            </tr>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.info %></td>
                    <td>
                        <form action="/delete/user/<%= user.username %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>

       
        <form action="/delete-all/users" method="POST" onsubmit="return confirm('Are you sure you want to delete all users?');">
            <button type="submit" class="delete-all-button">Delete All Users</button>
        </form>
    </div>

    <div class = "content ">
        <h1>Credentials</h1>
        <div >
        <table  >
            <tr>
                <th>Username</th>
                <th>ID</th>
                <th>Public Key</th>
                <th>Algorithm</th>
                <th>Actions</th>
            </tr>
            <% credentials.forEach(function(credential) { %>
                <tr>
                    <td><%= credential.username %></td>
                    <td><div class="content-container"><%= credential.id %></div></td>
                    <td ><div class="content-container"><%= credential.publicKey %></div></td>
                    <td><%= credential.algorithm %></td>
                    <td>
                        <form action="/delete/credential/<%= credential.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
        </div>
       
        <form action="/delete-all/credentials" method="POST" onsubmit="return confirm('Are you sure you want to delete all items?');">
            <button type="submit" class="delete-all-button">Delete All Credentials</button>
        </form>
    </div>

   
</body>
</html>
